<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
        <style>
            @font-face {
                font-family: 'PokemonGB';
                src: url('/assets/PokemonGb.ttf') format('truetype');
            }

            body {
                font-family: 'PokemonGB', sans-serif;
            }
        </style>
</head>

<body class="bg-red-800 text-white text-xs min-h-screen flex justify-center items-center">
    <div class="w-full max-w-3xl p-6 bg-red-900 border-4 border-black rounded-lg shadow-xl">
        <!-- Pokédex Screen -->
        <div class="px-4 py-3 bg-red-700 border-b-4 border-black rounded-t-lg flex justify-between">
            <h1 class="text-3xl text-yellow-300 capitalize">
                <%= pokemon.name %>
            </h1>
            <a href="javascript:history.back();" class="w-6 h-6 bg-blue-500 border-2 border-black rounded-full block"></a>
        </div>


        <!-- Pokémon Details -->
        <div class="flex flex-col items-center p-4 bg-gray-100 text-black border-4 border-black rounded-lg">
            <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>"
                class="w-40 h-40 bg-gray-300 border-4 border-black rounded-lg p-2" />
            <p class="text-lg font-semibold mt-3">Height: <%= pokemon.height %>
            </p>
            <p class="text-lg font-semibold">Weight: <%= pokemon.weight %>
            </p>
            <p class="text-lg font-semibold">
                Type: <%= pokemon.types.map(t=> t.type.name).join(', ') %>
            </p>
        </div>

        <!-- Back Button -->
        <div class="text-center mt-5">
            <a href="/" class="px-6 py-3 bg-yellow-400 text-black border-2