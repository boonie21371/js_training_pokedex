<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
        <style>
            @font-face {
                font-family: 'PokemonGB';
                src: url('/assets/PokemonGb.ttf') format('truetype');
            }

            body {
                font-family: 'PokemonGB', sans-serif;
            }
        </style>
</head>

<body class="bg-red-800 text-white text-xs min-h-screen flex justify-center items-center">
    <div class="w-full max-w-5xl p-6 bg-red-900 border-4 border-black rounded-lg shadow-xl">
        
        <!-- Pok√©dex Header -->
        <div class="flex justify-between items-center px-4 py-3 bg-red-700 border-b-4 border-black rounded-t-lg">
            <h1 class="text-4xl text-yellow-300">Pok√©dex</h1>
            <a id="randomizer" class="w-8 h-8 bg-blue-500 border-2 border-black rounded-full cursor-pointer"></a>
        </div>
        
        <script>
            document.getElementById('randomizer').addEventListener('click', function () {
                const randomId = Math.floor(Math.random() * 898) + 1;
                window.location.href = `/pokemon/${randomId}`;
            });
        </script>

        <!-- üîç Search Form -->
        <form action="/search" method="GET" class="flex justify-center my-5">
            <input type="text" name="name" placeholder="Search Pok√©mon..."
                class="px-4 py-2 border-2 border-black bg-gray-200 text-black rounded-l-lg focus:outline-none">
            <button type="submit"
                class="bg-yellow-400 border-2 border-black text-black px-4 py-2 rounded-r-lg hover:bg-yellow-500">
                Search
            </button>
        </form>

        <!-- Pok√©mon Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 p-4">
            <% pokemonList.forEach(pokemon=> { %>
                <a href="/pokemon/<%= pokemon.name %>"
                    class="p-4 bg-gray-100 text-black border-4 border-black rounded-lg text-center hover:shadow-2xl transition transform hover:scale-105">
                    <p class="text-xl capitalize font-semibold">
                        <%= pokemon.name %>
                    </p>
                </a>
                <% }); %>
        </div>
    </div>
    <%- include("../partials/footer") %>
</body>

</html>